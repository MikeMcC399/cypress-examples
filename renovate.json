{
  "extends": ["config:base"],
  "automerge": true,
  "schedule": ["every weekend"],
  "updateNotScheduled": true,
  "timezone": "America/New_York",
  "masterIssue": true,
  "packageRules": [
    {
      "packagePatterns": ["*"],
      "excludePackagePatterns": [
        "cypress",
        "cypress-map",
        "cypress-markdown-preprocessor",
        "start-server-and-test",
        "vuepress"
      ],
      "enabled": false
    }
  ]
}
